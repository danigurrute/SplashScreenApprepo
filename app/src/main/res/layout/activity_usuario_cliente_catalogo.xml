<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#8BC34A"
    tools:context=".usuario_cliente_catalogo">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/fondo_blanco"
        android:text="PRODUCTOS A BASE DE MATERIAL RECICLABLE"
        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:onClick="onClick"
                app:cardCornerRadius="0dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/botellas1"
                        android:layout_width="223dp"
                        android:layout_height="130dp"
                        android:onClick="onClick"
                        android:src="@drawable/sueterpolar" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="19dp"
                        android:text="Sueter polar"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="15sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/bolso1"
                        android:layout_width="223dp"
                        android:onClick="onClick"
                        android:layout_height="130dp"
                        android:src="@drawable/bolso" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="19dp"
                        android:text="Mochila-Bolso"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="15sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/camisa1"
                        android:onClick="onClick"
                        android:layout_width="223dp"
                        android:layout_height="130dp"
                        android:src="@drawable/camisadepo" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="19dp"
                        android:text="Camisa deportiva"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="15sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/mesa1"
                        android:onClick="onClick"
                        android:layout_width="223dp"
                        android:layout_height="130dp"
                        android:src="@drawable/mesa" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="19dp"
                        android:text="Mesa de noche"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="15sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/madera1"
                        android:onClick="onClick"
                        android:layout_width="223dp"
                        android:layout_height="130dp"
                        android:src="@drawable/madera" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="19dp"
                        android:text="Madera plastica"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="15sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ladrillo1"
                        android:onClick="onClick"
                        android:layout_width="223dp"
                        android:layout_height="130dp"
                        android:src="@drawable/ladrillos" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="19dp"
                        android:text="Ladrillo plastico"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="15sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/tricilo1"
                        android:onClick="onClick"
                        android:layout_width="223dp"
                        android:layout_height="130dp"
                        android:src="@drawable/tricilo" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="19dp"
                        android:text="Triciclo"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="15sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/jarron1"
                        android:onClick="onClick"
                        android:layout_width="223dp"
                        android:layout_height="130dp"
                        android:src="@drawable/jarron" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="19dp"
                        android:text="Jarron azul"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="15sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>




        </LinearLayout>

    </HorizontalScrollView>

    <FrameLayout
        android:layout_width="411dp"
        android:layout_height="111dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp">


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="96dp"
            android:layout_height="75dp"
            android:layout_gravity="left"
            android:layout_margin="19dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="86dp"
            android:layout_height="71dp"
            android:layout_gravity="right"
            android:layout_margin="15dp"
            android:onClick="onClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/usuario" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="94dp"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:onClick="onClick"
            app:srcCompat="@drawable/mensaje" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:text="Mensaje"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:layout_width="111dp"
            android:layout_height="19dp"
            android:layout_gravity="right"
            android:layout_marginTop="90dp"
            android:text="Mi cuenta"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="15sp" />


    </FrameLayout>

    <Button
        android:id="@+id/button18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />


</LinearLayout>